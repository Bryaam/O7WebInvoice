<div id="editModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="form-horizontal" id="edit_form" action="/Finantial/Settings/UpdateExchange" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 id="txtModalTitle" class="modal-title">Editar</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-lg-3" for="date">Fecha</label>
                        <div class="col-lg-9">
                            <input class="form-control" id="date" name="date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3" for="currencyBegin">Moneda origen</label>
                        <div class="col-lg-9">
                            <select class="form-control" id="currencyBegin" name="currencyBegin"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3" for="currencyEnd">Moneda fin</label>
                        <div class="col-lg-9">
                            <input class="form-control" id="currencyEnd" name="currencyEnd" value="S/." disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3" for="buyValue">Valor de compra</label>
                        <div class="col-lg-9">
                            <input class="form-control" id="buyValue" name="buyValue">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3" for="sellValue">Valor de venta</label>
                        <div class="col-lg-9">
                            <input class="form-control" id="sellValue" name="sellValue">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" id="btnSaveEdit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
